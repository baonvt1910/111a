<!DOCTYPE html>
<html>
{{>head title=this.title subpage='Page X' }}

<body>
    {{>header  title=this.title}}

    <main>
        <H1>{{title}}</H1>
        <ol>
            {{#each product}}
            <li>
                <div>
                    <H2>{{ProductName}}</H2>
                    <img height="100px" src="{{ImgLink}}">
                    <H3>Giá: {{Price}} </H3>
                    <BR> Thông tin sản phẩm
                    <h3>Mã sản phẩm : {{ProductCode}}</h3>
                    <h3>Nhãn Hiệu: {{Brand}} </h3>
                    <p>
                        {{Describe}}
                    </p>
                </div>
            </li>
            {{/each}}
        </ol>
    </main>
    
<!-- Khai báo trên module trước -->
    {{>footer}}
</body>

</html>
